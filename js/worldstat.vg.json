{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Solar Electricity Generation Per Capita",
  "width": "container",
  "height": 500,
  "projection": {"type": "equalEarth"},
  "config": {
    "legend": {
      "orient": "bottom",
      "layout": {"bottom": {"anchor": "middle"}}
    }
  },
  "params": [
    {
      "name": "yearSelection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "layer": [
    {"data": {
    "url": "data/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeOpacity": 0.6,
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
          "url": "data/per_cap.csv"
      },
      "transform": [
        {
          "lookup": "Entity",
          "from": {
            "data": {
              "url": "data/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          }, "as" : "geo"
        },
        {
          "filter": "datum.Year == yearSelection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeOpacity": 0.6,
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Solar electricity per capita - kWh",
          "type": "quantitative",
          "scale": {"scheme": "reds"},
          "legend": {
            "titleLimit": 220,
            "titleFontSize": 10,
            "offset": -10
          }
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Solar electricity per capita - kWh", "type": "quantitative", "title": "Solar per capita (kWh)","format": ".1s"}
        ]
      }
    },
    {
      "data": {
        "url": "data/percapnew.csv"
      },
      "transform": [
        {"filter":"datum.Year == yearSelection"},
        {"filter": "datum.Entity == 'Australia' ||datum.Entity == 'Japan'||datum.Entity == 'Germany' "},
        {
          "lookup": "Entity",
          "from": {
            "data": {
              "url": "data/world_country_and_usa_states_latitude_and_longitude_values.csv"
            },
            "key": "country",
            "fields": ["latitude", "longitude"]
          }
        },
        {
          "calculate": "'Rank ' + datum['Rank']+' '+ datum['Entity']",
          "as": "text_annotation_raw"
        },
        {
          "window": [
            {"op": "row_number", "as": "row_number"}
          ],
          "sort": [
            {"field": "latitude", "order": "descending"}
          ]
        },
        {
          "calculate": "datum.row_number * 20",  
          "as": "dy_offset"
        }
      ],
      "layer":[
      {"mark": {
                  "type": "text",
                  "align": "right",
                  "dx": -8,
                  "dy": -19,
                  "baseline": "middle",
                  "fontStyle": "bold",
                  "fontSize":15,
                  "font":"sans-serif"
                },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {
          "field": "text_annotation_raw",
          "type": "nominal",
          "title": "Country"
        }
        
        
      }}]
    }
  ]
}
